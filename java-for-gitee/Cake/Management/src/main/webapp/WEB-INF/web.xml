<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <filter>
        <filter-name>CharsetEncodingFilter</filter-name>
        <filter-class>com.opendevel.cake.web.CharsetEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>utf-8</param-value>
        </init-param>
    </filter>

    <filter>
        <filter-name>UserFilter</filter-name>
        <filter-class>com.opendevel.cake.filter.UserFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>UserFilter</filter-name>
        <url-pattern>*.do</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>CharsetEncodingFilter</filter-name>
        <url-pattern>*.do</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.opendevel.cake.servlet.LoginServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>CakeServlet</servlet-name>
        <servlet-class>com.opendevel.cake.servlet.CakeServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>CategoryServlet</servlet-name>
        <servlet-class>com.opendevel.cake.servlet.CategoryServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CategoryServlet</servlet-name>
        <url-pattern>/category/list.do</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CategoryServlet</servlet-name>
        <url-pattern>/category/addPrompt.do</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CategoryServlet</servlet-name>
        <url-pattern>/category/add.do</url-pattern>
    </servlet-mapping>


    <servlet-mapping>
        <servlet-name>CakeServlet</servlet-name>
        <url-pattern>/cake/list.do</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CakeServlet</servlet-name>
        <url-pattern>/cake/list2.do</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CakeServlet</servlet-name>
        <url-pattern>/cake/addPrompt.do</url-pattern>
    </servlet-mapping>


    <servlet-mapping>
        <servlet-name>CakeServlet</servlet-name>
        <url-pattern>/cake/add.do</url-pattern>
    </servlet-mapping>



    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/loginPrompt.do</url-pattern>
    </servlet-mapping>


    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login.do</url-pattern>
    </servlet-mapping>
    
    <welcome-file-list>
        <welcome-file>/index.jsp</welcome-file>
    </welcome-file-list>

    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/views/error/500.jsp</location>
    </error-page>

    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/views/error/404.jsp</location>
    </error-page>

</web-app>